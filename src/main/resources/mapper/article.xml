<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- DAO 정보 -->
<mapper namespace="com.project.pincafe.bbs.ArticleDAO">

<!-- resultMap = 얻어온 결과를 저장할 곳. 즉 VO 정보 -->
<resultMap type="com.project.pincafe.bbs.ArticleVO" id="ArticleMap">
    <result property="article_no"       column="article_no"/>
    <result property="title"            column="title"/>
    <result property="content"          column="content"/>
    <result property="article_like"     column="article_like"/>
    <result property="cafe_no"          column="cafe_no"/>
    <result property="article_date"     column="article_date"/>
    <result property="nickname"         column="nickname"/>
</resultMap>

<insert id = "insertNewArticle">
    INSERT INTO ARTICLE_TBL(title, content, article_like, 
    article_date, nickname) 
    VALUES (#{title}, #{content}, #{article_like}, sysdate, #{nickname})
</insert>   

</mapper>